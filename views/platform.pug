extends layout

block content
  .row
    .col-md-2
    .col-md-8
      h3= title
      form(action='/add_plat', method='POST')
        .form-group
          input.form-control.title-area(type='text', name='add_plat' placeholder='Platform Name')
        .form-group
          button.btn.btn-sm.btn-primary.btn-block Add Platform
  .row
    .col-md-2
    .col-md-8
      table.table
        thead
          tr
            th Platform ID
            th Platform Name
        tbody
          for platform in platforms
            tr
              td #{platform.platform_id}
              td #{platform.platform_name}


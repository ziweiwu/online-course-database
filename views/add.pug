extends layout

block content
  .row
    .col-md-2
    .col-md-8
      h1= title
  .row
    .col-md-2
    .col-md-4
      form(action='/', method='POST')
        .form-group
          input.form-control.title-area(type='text', name='courseName', placeholder='Course Name')
        .form-group
          input.form-control.title-area(type='text', name='subject', placeholder='Subject')
        .form-group
          input.form-control.title-area(type='text', name='platform', placeholder='Platform')
        .form-group
          input.form-control.title-area(type='text', name='organization', placeholder='Organization')
        .form-group
          button.btn.btn-sm.btn-primary.btn-block Add Course
    .col-md-4
      p Select choices
      .dropdown
        button.btn.btn-default.dropdown-toggle(type='button', data-toggle='dropdown')
          | Choose Subject
          span.caret
        ul.dropdown-menu(role='menu', aria-labelledby='menu1')
          for each
          li(role='presentation')
            a(role='menuitem', tabindex='-1', href='#') HTML
          li(role='presentation')
            a(role='menuitem', tabindex='-1', href='#') CSS
          li(role='presentation')
            a(role='menuitem', tabindex='-1', href='#') JavaScript
      .dropdown
        button.btn.btn-default.dropdown-toggle(type='button', data-toggle='dropdown')
          | Choose Platform
          span.caret
        ul.dropdown-menu(role='menu', aria-labelledby='menu1')
          li(role='presentation')
            a(role='menuitem', tabindex='-1', href='#') HTML
          li(role='presentation')
            a(role='menuitem', tabindex='-1', href='#') CSS
          li(role='presentation')
            a(role='menuitem', tabindex='-1', href='#') JavaScript
      .dropdown
        button.btn.btn-default.dropdown-toggle(type='button', data-toggle='dropdown')
          | Choose Organization
          span.caret
        ul.dropdown-menu(role='menu', aria-labelledby='menu1')
          li(role='presentation')
            a(role='menuitem', tabindex='-1', href='#') HTML
          li(role='presentation')
            a(role='menuitem', tabindex='-1', href='#') CSS
          li(role='presentation')
            a(role='menuitem', tabindex='-1', href='#') JavaScript


